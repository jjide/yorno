        <span class="question">
          <%= question %>
          &mdash;
          <%= Category.find(category_id).name %>
        </span>
        <div>
            <%= image_tag(photo_1_url) unless photo_1_url.nil? %>
            <%= image_tag(photo_2_url) unless photo_2_url.nil? %>
        </div>
        <div class="percentages">
          <% total = yeses + nos %>
          <% puts "just did image tags, about to start on percentages with #{total} votes" %>
          <% if total > 0 %>
              <% yes_percentage = (yeses * 100.0) / (total * 1.0)
                 no_percentage = (nos * 100.0) / (total * 1.0) %>
              <table cellpadding="0" cellspacing="0">
                <tr>
                  <td class="percentage_number">
                    Yes
                    <span class="yes_number"><%= number_to_percentage(yes_percentage, :precision => 0) %></span></td>
                  <td class="no_background">
                    <div style="width: <%= yes_percentage %>%"></div>
                  </td>
                  <td class="percentage_number">
                    No
                    <span class="no_number"><%= number_to_percentage(no_percentage, :precision => 0) %></span></td>
                </tr>
              </table>

          <% else %>
              0 votes so far
          <% end %>
        </div>
