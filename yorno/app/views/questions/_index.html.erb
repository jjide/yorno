<h1>My Questions</h1>

<table class="table table-striped">
  <tr>
    <th>Questions</th>
	<th>Yes</th>
	<th>No</th>
    <th></th>
    <th></th>
   
  </tr>

<% @questions.each do |question| %>
<% if user_signed_in? %>
	<% if question.user_id == current_user.id %>
  	<tr>
    	<td><%= link_to question.question_text, question_path(question) %></td>
    	<td></td>
		<td></td>
   		<!-- <td><%= link_to 'Show', question %></td> -->
    	<td><%= link_to 'Edit', edit_question_path(question) %></td>
    	<td><%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  	</tr>
	<% end %>

<% end %>
<% end %>
</table>

<br />

<% if user_signed_in? %>
<%= link_to 'Add a New Question', new_question_path, class:"btn btn-primary" %>
<% end %>